<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:id="@+id/coordinator"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary"
        android:orientation="vertical"
        >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_primary"
    tools:context=".Location.CreateNewLocActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView

                android:id="@+id/news_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/montserrat"
                android:text="Location"
                android:textColor="@color/white"
                android:textSize="25dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1">




        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/widget30"

        android:gravity="center"
        android:background="@drawable/dashboard_bg"
        android:orientation="vertical">







        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_background"
            android:padding="10dp">

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:hint="Pincode"
                android:inputType="number"
                android:textSize="13dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_background"
            android:padding="10dp">

            <!--                <TextView-->
            <!--                    android:id="@+id/select_state"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:layout_marginTop="4dp"-->
            <!--                   -->
            <!--                    android:text="Please select a State"-->
            <!--                    android:textSize="14dp"-->
            <!--                    android:textStyle="bold"-->
            <!--                    android:fontFamily="@font/montserrat_medium"-->
            <!--            />-->
            <TextView
                android:id="@+id/select_State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="State" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"

                android:layout_marginTop="4dp"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/select_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="District"
                android:textColor="@color/gray" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/down_arrow" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativeMandal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/select_Mandal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Mandal"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeVillage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_background"
            android:padding="10dp">

            <TextView
                android:id="@+id/select_Village"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Village"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:src="@drawable/down_arrow" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeFavName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/spinner_background"
            android:padding="10dp">


            <EditText
                android:id="@+id/fav_loc_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:textColorHint="@color/gray"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat"
                android:hint="Enter Favrouite Location Name"
                android:inputType="textShortMessage"
                android:textSize="13dp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"

            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_createLoctn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/button_background"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Add as favorite"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/red" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>